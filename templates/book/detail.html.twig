{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-6">
    <div class="max-w-3xl mx-auto bg-white p-6 rounded shadow">
        <h1 class="text-3xl font-bold text-gray-800 mb-8 text-center">
            {{ book.title }}
        </h1>

        <div class="flex flex-col md:flex-row gap-6">
            {% if book.image %}
                <div class="md:w-1/2">
                    <img src="{{ book.image }}" alt="Couverture" class="w-full h-72 object-cover rounded shadow" />
                </div>
            {% else %}
                <div class="md:w-1/2 h-72 bg-gray-300 flex items-center justify-center text-gray-500 rounded">
                    Pas d'image
                </div>
            {% endif %}

            <div class="md:w-1/2 flex flex-col justify-center">
                <p class="text-lg text-gray-700 mb-4">Auteur(s) : {{ book.authors }}</p>

                {% if book.overview %}
                    <p class="text-gray-700 mb-4">{{ book.overview }}</p>
                {% endif %}

                {% if book.rating is not null %}
                    <p class="text-gray-700 mb-4">‚≠ê {{ book.rating }}/5</p>
                {% endif %}

                <a href="{{ path('home') }}"
                   class="mt-auto inline-block px-6 py-2 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700 transition">
                   Retour
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}


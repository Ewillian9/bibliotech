{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}

<h1 class="text-3xl font-bold my-6">{{ book.title }}</h1>
<p class="text-lg">Auteur : <strong>{{ book.author }}</strong></p>
<p class="text-gray-600">Genre : <strong>{{ book.genre }}</strong></p>

{% if book.isAvailable %}
    <p class="text-green-600 font-medium mt-2">✅ Ce livre est disponible</p>
{% else %}
    <p class="text-red-600 font-medium mt-2">❌ Ce livre est actuellement emprunté</p>
{% endif %}

<a href="{{ path('homepage') }}" class="mt-4 inline-block text-blue-500 hover:underline">
    ← Retour à la liste des livres
</a>

{% endblock %}

<header>
	<nav class="bg-gray-900 text-white p-4">
		<div class="container mx-auto flex flex-col items-center">
			<a href="{{ path('homepage') }}" class="text-2xl font-bold mb-4">ðŸ“š Bibliotech</a>
			<ul class="flex space-x-4 text-lg">
				<li>
					<a href="{{ path('homepage') }}" class="px-4 py-2 rounded-full bg-gray-800 hover:bg-blue-600 transition {% if app.request.attributes.get('_route') == 'homepage' %} bg-blue-500 {% endif %}">
						Accueil
					</a>
				</li>
				{% if app.user %}
					{% if is_granted('ROLE_ADMIN') %}

						<li>
							<a href="{{ path('admin') }}" class="px-4 py-2 rounded-full bg-gray-800 hover:bg-blue-600 transition">
								Tableau de Bord
							</a>
						</li>
						
					{% endif %}
					<li>
						<a href="{{ path('user_profile_view', {id: app.user.id}) }}" class="px-4 py-2 rounded-full bg-gray-800 hover:bg-blue-600 transition {% if app.request.attributes.get('_route') == 'user_profile_view' %} bg-blue-500 {% endif %}">
							Mon compte
						</a>
					</li>
					<li>
						<a href="{{ path('app_logout') }}" class="px-4 py-2 rounded-full bg-gray-800 hover:bg-red-600 transition">
							Logout
						</a>
					</li>
				{% else %}
					<li>
						<a href="{{ path('app_login') }}" class="px-4 py-2 rounded-full bg-gray-800 hover:bg-green-600 transition {% if app.request.attributes.get('_route') == 'app_login' %} bg-green-500 {% endif %}">
							Login
						</a>
					</li>
					<li>
						<a href="{{ path('app_register') }}" class="px-4 py-2 rounded-full bg-gray-800 hover:bg-purple-600 transition {% if app.request.attributes.get('_route') == 'app_register' %} bg-purple-500 {% endif %}">
							S'inscrire
						</a>
					</li>
				{% endif %}
			</ul>
		</div>
	</nav>
</header>

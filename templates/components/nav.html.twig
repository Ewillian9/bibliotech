<header>
    <nav class="bg-gray-900 text-white p-4">
        <div class="container mx-auto flex flex-col items-center">
            <a href="{{ path('homepage') }}" class="text-2xl font-bold mb-4">ðŸ“š Bibliotech</a>
            <ul class="flex space-x-4 text-lg">
                <li>
                    <a href="{{ path('homepage') }}" 
                       class="px-4 py-2 rounded-full bg-gray-800 hover:bg-blue-600 transition {% if app.request.attributes.get('_route') == 'homepage' %} bg-blue-500 {% endif %}">

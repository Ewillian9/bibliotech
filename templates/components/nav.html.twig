                        </a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('app_login') }}"
                           class="px-4 py-2 rounded-full bg-gray-800 hover:bg-green-600 transition {% if app.request.attributes.get('_route') == 'login_form' %} bg-green-500 {% endif %}">
                            Login
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('homepage') }}"
                           class="px-4 py-2 rounded-full bg-gray-800 hover:bg-purple-600 transition {% if app.request.attributes.get('_route') == 'register' %} bg-purple-500 {% endif %}">

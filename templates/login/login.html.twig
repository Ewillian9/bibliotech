{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
	{% for msg in app.flashes('error') %}
		<div class="bg-red-100 text-red-700 p-2 rounded mb-2">
			{{ msg }}
		</div>
	{% endfor %}
<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6 mt-10">
  <h1 class="text-2xl font-bold mb-6 text-center">Connexion</h1>

  {% if error %}
    <div class="mb-4 text-red-600 text-sm">
      {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
  {% endif %}

  {% if app.user %}
    <div class="mb-4 text-gray-700">
      Vous êtes connecté en tant que {{ app.user.userIdentifier }}. 
      <a href="{{ path('app_logout') }}" class="text-blue-600 hover:underline">Déconnexion</a>
    </div>
  {% endif %}

  <form method="post" action="{{ path('app_login') }}">
    <div class="mb-4">
      <label for="username" class="block text-gray-700">Email :</label>
      <input type="email" name="_username" id="username" value="{{ last_username }}" required autofocus
             class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>
    <div class="mb-4">
      <label for="password" class="block text-gray-700">Mot de passe :</label>
      <input type="password" name="_password" id="password" required
             class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-md transition duration-200">
      Se connecter
    </button>
  </form>
</div>
{% endblock %}

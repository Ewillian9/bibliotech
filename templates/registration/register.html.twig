{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6 mt-10">
    <h1 class="text-2xl font-bold mb-6 text-center">Inscription</h1>

    {% for message in app.flashes('error') %}
        <div class="mb-4 p-2 bg-red-200 text-red-800 rounded">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="mb-4 p-2 bg-green-200 text-green-800 rounded">{{ message }}</div>
    {% endfor %}

    {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
        <div class="mb-4">
            {{ form_label(registrationForm.name, 'Nom', {'attr': {'class': 'block text-gray-700'}}) }}
            {{ form_widget(registrationForm.name, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            {{ form_errors(registrationForm.name) }}
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.email, 'Email', {'attr': {'class': 'block text-gray-700'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'attr': {'class': 'block text-gray-700'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="mb-4">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'flex items-center'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes et conditions', {'attr': {'class': 'ml-2 text-gray-700'}}) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-md transition duration-200">
            S'inscrire
        </button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
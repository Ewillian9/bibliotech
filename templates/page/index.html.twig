{% extends 'base.html.twig' %}

{% block title %}Page d'accueil{% endblock %}

{% block body %}
    <div class="container mx-auto p-6">
        <h1 class="text-4xl font-bold text-center mb-8">Liste des livres</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for book in books %}
                <div class="bg-white p-4 rounded-lg shadow-lg hover:shadow-2xl transition">
                    <h2 class="text-xl font-semibold mb-2">{{ book.title }}</h2>

                    {% if book.thumbnail %}
                        <img src="{{ book.thumbnail }}" alt="Image de {{ book.title }}" class="w-full h-auto mb-4 rounded-md">
                    {% else %}
                        <p class="text-sm text-gray-600 mb-4">Pas d'image disponible</p>
                    {% endif %}

                    {% if book.authors %}
                        <p class="text-sm text-gray-600">par {{ book.authors|join(', ') }}</p>
                    {% else %}
                        <p class="text-sm text-gray-600">Auteur(s) inconnu(s)</p>
                    {% endif %}

                    <a href="{{ path('book_detail', {'id': book.id}) }}" 
                       class="text-blue-500 hover:text-blue-700 mt-4 inline-block">Voir les d√©tails</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

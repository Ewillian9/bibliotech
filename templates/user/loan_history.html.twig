{% extends 'base.html.twig' %}

{% block title %}Historique des Emprunts{% endblock %}

{% block body %}
    <h1>Historique des Emprunts de {{ user.name }}</h1>
    {% if loans is empty %}
        <p>Aucun emprunt trouvé.</p>
    {% else %}
        <table border="1" cellpadding="5">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Livre</th>
                    <th>Date d'emprunt</th>
                    <th>Date de retour</th>
                    <th>Statut</th>
                </tr>
            </thead>
            <tbody>
                {% for loan in loans %}
                    <tr>
                        <td>{{ loan.id }}</td>
                        <td>{{ loan.book.title }}</td>
                        <td>{{ loan.createdAt|date('d/m/Y') }}</td>
                        <td>{{ loan.returnedAt|date('d/m/Y') }}</td>
                        <td>{{ loan.status }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <div>
        <a href="{{ path('user_profile_view', {'id': user.id}) }}">⬅ Retour à mon profil</a>
    </div>
{% endblock %}


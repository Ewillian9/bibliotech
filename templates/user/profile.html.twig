{% extends 'base.html.twig' %}

{% block title %}Mon Profil
{% endblock %}

{% block body %}
	<div class="max-w-md mx-auto card-library mt-10 bg-white p-6 rounded shadow">
		<h1 class="text-2xl font-bold mb-4">Mon Profil</h1>

		<!-- Affichage éventuel d'un message de succès (flash) -->
		{% for message in app.flashes('success') %}
			<div class="mb-4 p-2 bg-green-200 text-green-800 rounded">
				{{ message }}
			</div>
		{% endfor %}

		<!-- Informations de l'utilisateur -->
		<div class="mb-4">
			<p class="text-sm text-gray-600">Nom</p>
			<p class="text-lg">{{ user.name }}</p>
		</div>
		<div class="mb-4">
			<p class="text-sm text-gray-600">Email</p>
			<p class="text-lg">{{ user.email }}</p>
		</div>

		<!-- Lien vers l'historique des emprunts -->
		<div class="mb-6">
			<a href="{{ path('user_loans_view', {'id': user.id}) }}" class="block text-center bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition">
				Voir mon historique d'emprunts
			</a>
		</div>

		<!-- Emprunts en cours -->
		<h2 class="text-xl font-semibold mb-2 text-gray-800">Mes emprunts en cours</h2>
		{% set hasActive = false %}

		{% for loan in user.loans %}
			{% if loan.status == 'En cours' %}
				{% set hasActive = true %}
				<div class="bg-gray-50 p-4 mb-3 rounded shadow flex items-center justify-between">
					<div>
						<p class="font-semibold text-gray-700">Livre :
							{{ loan.book.title }}</p>
						<p class="text-sm text-gray-500">Emprunté le
							{{ loan.createdAt|date('d/m/Y') }}</p>
						<p class="text-sm text-gray-500">À rendre avant le
							{{ loan.returnedAt|date('d/m/Y') }}</p>
					</div>

					<!-- Bouton "Restituer" -->
					<!-- Ce lien appelle une route (ex: loan_return) qui met le statut à "Terminé" -->
					<!-- Bouton "Restituer" stylé -->
						<a
						href="{{ path('loan_return', { id: loan.id }) }}" class="inline-flex items-center px-4 py-2 bg-green-600 text-white font-semibold rounded"> 
						Restituer
					</a>


				</div>
			{% endif %}
		{% endfor %}

		{% if not hasActive %}
			<p class="text-gray-600">Aucun emprunt en cours.</p>
		{% endif %}
	</div>
{% endblock %}
